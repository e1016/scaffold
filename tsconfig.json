{
  "compilerOptions": {
    "jsx": "react-jsx",
    "lib": ["es2015", "DOM"],
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "baseUrl": "resources",
    "paths": {
      "@/*": ["js/*"],
      "&/*": ["css/*"],
    }
  },
  "include": [
    "resources/js/**/*.ts",
    "resources/js/**/*.tsx",
    "resources/js/**/*.js",
    "resources/js/**/*.jsx"
  ]
}